# ============================================================
# .env.example - انسخ هذا الملف وسمّه .env
# ============================================================

# الـ Port للـ API
PORT=3001

# المنصة التي يُسمح لها بالوصول للـ API (Frontend URL)
ALLOWED_ORIGIN=http://localhost:3000

# مفتاح سري للعمليات الإدارية
ADMIN_API_KEY=your_secret_admin_key_here

# إجبار السحب الأولي عند التشغيل (true / false)
FORCE_INITIAL_SCRAPE=false

# إعدادات Puppeteer
PUPPETEER_TIMEOUT=30000
MAX_PAGES_PER_SITE=50

# تأخير بين الطلبات (بالمللي ثانية)
MIN_DELAY=1200
MAX_DELAY=3500
